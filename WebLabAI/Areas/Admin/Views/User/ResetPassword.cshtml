@model WebLabAI.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <header class="panel-heading">
            Reset Password
            <span class="tools pull-right">
                <a class="fa fa-times" href="javascript:;"></a>
            </span>
        </header>
        <div class="panel-body">
            <div class="form">
                <input type="hidden" asp-for="Id" />

                <form asp-action="ResetPassword" asp-controller="User" asp-area="Admin" class="cmxform form-horizontal " id="signupForm" novalidate="novalidate">
                    <div class="form-group ">
                        <label for="firstname" class="control-label col-lg-3">Email</label>
                        <div class="col-lg-6">
                            <input class=" form-control" asp-for="Email" type="text" disabled>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group ">
                        <label for="lastname" class="control-label col-lg-3">New Password</label>
                        <div class="col-lg-6">
                            <input class=" form-control" asp-for="NewPassword" type="password">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group ">
                        <label for="education" class="control-label col-lg-3">Confirm Password</label>
                        <div class="col-lg-6">
                            <input class=" form-control" asp-for="ConfirmPassword" type="password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    


                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-6">
                            <button class="btn btn-info" type="submit">Reset Password</button>
                            <a asp-action="StaffManager" asp-controller="User" asp-area="Admin" class="btn btn-default" type="button">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

</section>


