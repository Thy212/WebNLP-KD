
@{
    ViewData["Title"] = "StaffManager";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<WebLabAI.ViewModels.UserVM>

@{
    ViewData["Title"] = "StaffManager";

    int count = 1;
}


<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="table-agile-info">
            <!-- cac nut see, add, delete, edit -->
            <div class="row" style="margin-bottom:10px">
                <div class="col-sm-8 m-b-xs">
                    
                </div>
                
                <div class="col-sm-4 text-right">
                    <a asp-action="AddStaff" asp-controller="User" asp-area="Admin" type="submit" class="btn btn-custom mb-1" style="background-color:#009da5; color:white">
                        <i class="fa fa-plus" style="cursor: pointer; margin-right: 5px; color: #fff"></i>
                        Add New
                    </a>
                </div>
            </div>

            <div class="panel panel-default">
                <!--card body-->

                <div class="panel-heading" style="margin-bottom: 10px">
                    STAFF MANAGER
                </div>
                
                <!-- list table of users -->
                <div class="table-responsive">
                    <table class="table table-striped b-t b-light" id="staffManager">
                        <!-- name of collumm -->
                        <thead>
                            <tr>
                                
                                <th style="width:15px;">
                                    <!-- STT -->
                                </th>

                                <th>Last Name</th>
                                <th>First Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Action</th>
                                <th></th>
                                
                            </tr>
                        </thead>

                        <tbody>
                            @foreach(var user in Model)
                            {
                                @if(user.Email == "admin@gmail.com")
                                {
                                    <tr>
                                        <td>
                                            @{
                                                @count
                                                count++;
                                            }
                                        </td>
                                        <td>@user.LastName</td>
                                        <td>@user.FirstName</td>
                                        <td>@user.Email</td>
                                        <td>@user.Role</td>
                                        <td>
                                            @*<button style="width:140px; background-color:#009da5; border-radius:10px; outline: none;" disabled>
                                                <a style="color: white; padding: 3px 2px;" class="btn btn-secondary" asp-action="ResetPassword" asp-controller="User" asp-route-id="@user.Id" onclick="return false;">Reset Password</a>
                                            </button>*@
                                        </td>
                                        <td>
                                            @*<a class="fa fa-edit" style="cursor: pointer; margin-left: 6px; color: #009da5; font-size:20px" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" method="post"></a>
                                            <form asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Do you want to delete this user?')">
                                                <button type="submit" style="border: none; background-color: transparent;">
                                                    <i class="fa fa-times" style="cursor: pointer; color:#009da5; font-size:22px"></i>
                                                </button>
                                            </form>*@

                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            @{
                                                @count
                                                count++;
                                            }
                                        </td>
                                        <td>@user.LastName</td>
                                        <td>@user.FirstName</td>
                                        <td>@user.Email</td>
                                        <td>@user.Role</td>
                                        <td>
                                            <button style="width:140px; background-color:#009da5; border-radius:10px; outline: none;">
                                                <a style="color: white; padding: 3px 2px;" class="btn btn-secondary" asp-action="ResetPassword" asp-controller="User" asp-route-id="@user.Id">Reset Password</a>
                                            </button>
                                        </td>
                                        <td>
                                            <a class="fa fa-edit" style="cursor: pointer; margin-left: 6px; color: #009da5; font-size:20px" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" method="post"></a>
                                            <form asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Do you want to delete this user?')">
                                                <button type="submit" style="border: none; background-color: transparent;">
                                                    <i class="fa fa-times" style="cursor: pointer; color:#009da5; font-size:22px"></i>
                                                </button>
                                            </form>

                                        </td>
                                    </tr>
                                }
                                
                            }
                        </tbody>
                       
                    </table>
                </div>
                
            </div>
        </div>
    </section>
   
</section>




