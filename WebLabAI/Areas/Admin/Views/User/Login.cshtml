@model WebLabAI.ViewModels.LoginVM

@{
    Layout = "_LoginLayout";
    //ViewData["Title"] = "Login";
}

<div class="art-right-w3ls">
    <h1>LOGIN</h1>
    <form asp-action="Login" method="post">
        <div class="main">
            <div class="form-left-to-w3l">
                <input asp-for="Email" type="text" placeholder="Email" required="">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-left-to-w3l ">
                <input asp-for="Password" type="password" placeholder="Password" required="">
                <span asp-validation-for="Password" class="text-danger"></span>
                <!-- <div class="clear"></div>-->
            </div>
        </div>
        <div class="left-side-forget">
            <input asp-for="RememberMe" type="checkbox" class="checked">
            <span class="remenber-me">Remember me </span>
        </div>
        <div class="right-side-forget">
            <a asp-action="ForgotPassword" asp-controller="User" class="for">Forgot password?</a>
        </div>
        <div class="clear"></div>
        <div class="btnn">
            <button type="submit" value="Login">Login</button>
        </div>
    </form>
    <div class="w3layouts_more-buttn">
        <h4>
            Don't have an account?
            <a asp-action="Contact" asp-controller="Page" asp-area="Author">
                Contact admin
            </a>
        </h4>
    </div>

</div>


